      <%- contents %>

      <!-- Footer -->
      <section class="footer">
        <div class="container">
          <div class="d-flex justify-content-between mb-4">
            <ul class="menu">
              <li><a href="#">首頁</a></li>
              <li><a href="#">系列鏡框</a></li>
              <li><a href="#">門市據點</a></li>
              <li><a href="#">部落格</a></li>
              <li><a href="#">常見問題</a></li>
            </ul>
            <ul class="social">
              <li>
                <a href="#">
                  <img
                    src="./assets/images/index/footer/ic_social_fb.svg"
                    alt=""
                  />
                </a>
              </li>
              <li>
                <a href="#">
                  <img
                    src="./assets/images/index/footer/ic_social_ig.svg"
                    alt=""
                  />
                </a>
              </li>
              <li>
                <a href="#">
                  <img
                    src="./assets/images/index/footer/ic_social_line.svg"
                    alt=""
                  />
                </a>
              </li>
            </ul>
          </div>
          <div class="d-flex mb-2">
            <img src="./assets/images/index/footer/ic_phone_48px.svg" alt="" />
            <h4 class="cellphone">
              0800-000-000
            </h4>
          </div>
          <div class="d-flex mb-3">
            <img
              src="./assets/images/index/footer/ic_mail_outline_24px.svg"
              alt=""
            />
            <h4 class="email">
              glasses@business.com
            </h4>
          </div>
          <div class="h-line mb-3"></div>
          <div class="d-flex justify-content-between">
            <div class="copyright d-flex">
              <img src="./assets/images/index/logo.png" alt="" />
              <h5>Copyright © 2020 Glasses.All rights reserved.</h5>
            </div>
            <ul class="policy">
              <li><a href="#">隱私權政策</a></li>
              <li><a href="#">服務條款</a></li>
            </ul>
          </div>
        </div>
