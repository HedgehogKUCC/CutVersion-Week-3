  <body ontouchstart>
    <div class="wrap">
      <!-- Navbar -->
      <section class="navbar">
        <a href="#" class="ham_icon">
          <span id="icon" class="icon-menu"></span>
        </a>
        <h1
          class="text-hide"
          style="background: url('./assets/images/index/logo.png') no-repeat; width: 80px; height: 48.57px;"
        >
          六角眼鏡行
        </h1>
        <ul class="dropdown">
          <li><a href="#">系列鏡框</a></li>
